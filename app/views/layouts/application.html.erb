<!DOCTYPE html>
<html>
<head>
  <title>Lingua</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class='navbar navbar-fixed-top' style='position:absolute;'>
    <div class='navbar-inner'>
        <div class='container' style='width:auto; padding: 0 20 px; margin-left:10px;'>

            <%= link_to "LinguA", root_path, :class => "brand logo" %>

            <ul class='nav'>

                <li class='divider-vertical'></li>
                <li><a href='#'><i class='icon-list'></i> Lists</a></li>
                <li class='divider-vertical'></li>

            </ul>

        </div>
    </div>
</div>

<div class='row-fluid' style='margin-top:10px;'>
<div class='span8 offset2'>

    <% if notice %> <div class="alert alert-block alert-success">

        <button class="close" data-dismiss="alert" type="button">&times;</button>
        <%= notice %>

    </div> <% end %>

    <% if alert %><div class="alert alert-block alert-error">

        <button class="close" data-dismiss="alert" type="button">&times;</button>
        <%= alert %>

    </div> <% end %>

</div>
</div>

<%= yield %>

</body>
</html>
