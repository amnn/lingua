<div class='list-box'>
    <h2><%= @list.name %></h2>

    <table class='table table-striped definition-table'>

        <thead>

            <tr>
                <th><%= @list.lang1.name %></th>
                <th><%= @list.lang2.name %></th>
            </tr>

        </thead>

        <tbody>

            <% @list.list_items.each do |item| %>
            <tr>
                <td><%= item.word1_str %></td>
                <td><%= item.word2_str %></td>
            </tr>
            <% end %>

        </tbody>


    </table>

    <%= link_to   'Edit', edit_list_path(@list), class: 'btn btn-block btn-small btn-primary' %>
    <%= link_to 'Â« Back',            lists_path, class:    'btn btn-block btn-small btn-info' %>

</div>
