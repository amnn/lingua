<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
<p>
    
    <div class='input-prepend'>
        <span class='add-on'><i class='icon-envelope'></i></span>
        <%= f.email_field :email, :placeholder => 'Email Address', :class => 'input-xlarge' %>
    </div>

    <div class='input-prepend'>
        <span class='add-on'><i class='icon-lock'></i></span>
        <%= f.password_field :password, :placeholder => 'Password', :class => 'input-xlarge' %>
    </div>

    <div class='input-prepend'>
        <span class='add-on'><i class='icon-lock'></i></span>
        <%= f.password_field :password_confirmation, :placeholder => 'Password Confirmation', :class => 'input-xlarge' %>
    </div>

</p>

    <div><%= f.submit "Sign up", :class => 'btn btn-block btn-large btn-success' %></div>
<% end %>

<%= render "devise/shared/links" %>
