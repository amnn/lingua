<div class='leaderboard-view span8 offset2'>
    <h1>Leaderboard</h1>
    <table class='table table-striped table-hover leaderboard'>

        <thead>
            
            <tr>
                <th style='width:;'><i class='icon-certificate'></i></th>
                <th style='width:70%;'><i class='icon-user'></i> User</th>
                <th style='width:20%;'><i class='icon-star'></i> Points</th>
            </tr>

        </thead>
        <tbody>
        <% i = 1; found = false %>
        <% @users.each do |user| -%>
            <% found ||= user.id == current_user.id %>
            <tr <%= 'class=success' if user.id == current_user.id %>>
                <td><%= i %></td>
                <td>
                    <%= user.first_name.capitalize + " " + 
                        user.last_name.capitalize %>
                </td>
                <td><%= user.stars %></td>
            </tr>
            <% i += 1 %>
        <% end -%>
        <% if !found %>

            <tr class='success' >
                <td>...</td>
                <td>
                    <%= current_user.first_name.capitalize + " " + 
                        current_user.last_name.capitalize %>
                </td>
                <td><%= current_user.stars %></td>
            </tr>

        <% end %>
        </tbody>

    </table>
</div>